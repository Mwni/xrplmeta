{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"title": "Ledger Stream",
	"type": "object",
	"properties": {
		"ledgers": {
			"type": "array",
			"items": {
				"$ref": "#/definitions/Ledger"
			}
		},
		"transactions": {
			"type": "array",
			"items": {
				"$ref": "#/definitions/Transaction"
			}
		}
	},
	"definitions": {
		"Ledger": {
			"type": "object",
			"properties": {
				"index": {
					"type": "integer",
					"id": true
				},
				"hash": {
					"type": "string",
					"format": "hex"
				},
				"closeTime": {
					"type": "integer",
					"format": "timestamp"
				},
				"transactions": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/Transaction"
					}
				}
			},
			"required": [
				"index",
				"hash",
				"closeTime"
			]
		},
		"Transaction": {
			"type": "object",
			"properties": {
				"id": {
					"type": "integer",
					"id": true
				},
				"hash": {
					"type": "string",
					"format": "hex"
				},
				"ledger": {
					"$ref": "#/definitions/Ledger"
				},
				"data": {
					"type": "any"
				}
			},
			"required": [
				"hash"
			],
			"unique": [
				"hash"
			]
		}
	}
}