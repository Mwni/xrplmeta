{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"title": "Ledger Snapshot",
	"type": "object",
	"properties": {
		"accounts": {
			"type": "array",
			"items": {
				"$ref": "#/definitions/Account"
			}
		}
	},
	"definitions": {
		"Account": {
			"type": "object",
			"properties": {
				"id": {
					"type": "integer"
				},
				"address": {
					"type": "string",
					"storageType": "blob",
					"storageEncoding": "@xrpl/address"
				},
				"balance": {
					"type": "string",
					"storageType": "integer",
					"storageEncoding": "@xrpl/xfl"
				},
				"domain": {
					"type": "string",
					"storageType": "blob",
					"storageEncoding": "hex"
				},
				"emailHash": {
					"type": "string",
					"storageType": "blob",
					"storageEncoding": "hex"
				}
			},
			"required": [
				"id",
				"address"
			],
			"unique": [

			]
		}
	}
}