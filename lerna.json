{
  "version": "3.0.0-alpha",
  "npmClient": "npm",
  "command": {
    "publish": {
      "ignoreChanges": [
        "ignored-file",
        "*.md"
      ],
      "message": "chore(release): publish",
      "registry": "https://npm.pkg.github.com"
    },
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  },
  "packages": [
    "server",
    "toml",
    "crawler",
    "db",
    "log",
    "migration",
    "repo",
    "utils",
    "release"
  ]
}